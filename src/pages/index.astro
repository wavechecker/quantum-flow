---
const title = 'Quantum Flow L.L.C-FZ — Digital Strategy & Communications';
const description = 'Marketing, PR & digital strategy consultancy. Remote-first. Serving EU, MENA & APAC.';
const url = 'https://quantumflow.netlify.app';
const emails = ['quantf@proton.me', 'servicedesk7@pm.me'];
const schema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Quantum Flow L.L.C-FZ",
  "url": url,
  "email": emails,
  "description": description,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Meydan Grandstand, 6th floor, Meydan Road, Nad Al Sheba",
    "addressLocality": "Dubai",
    "addressCountry": "AE"
  },
  "foundingDate": "2024-03-25",
  "identifier": [
    { "@type": "PropertyValue", "name": "Formation Number", "value": "2417494" }
  ],
  "areaServed": ["EU", "MENA", "APAC"],
  "sameAs": []
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta name="theme-color" content="#0b0e13" />
    <link rel="icon" href="/favicon.svg" />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <script type="application/ld+json">
      {JSON.stringify(schema)}
    </script>
  </head>
  <body>
    <div class="wrap">
      <header>
        <div class="brand">
          <img src="/logo.svg" alt="Quantum Flow" width="28" height="28" />
          <strong>Quantum Flow</strong>
        </div>
        <nav>
          <a class="btn" href="#services">Services</a>
          <a class="btn" href="#about">About</a>
          <a class="btn" href="#contact">Contact</a>
        </nav>
      </header>

      <section class="hero">
        <p class="kicker">Dubai Free Zone Company · Formation No. 2417494</p>
        <h1>Digital Strategy & Communications</h1>
        <p class="muted">
          Advisory and content services for technology and health organizations. We focus on
          clear positioning, compliant communications, and reliable delivery.
        </p>
        <div class="contact" style="margin-top:1rem;">
          <span class="badge">Remote-first · EU · MENA · APAC</span>
          <a class="btn" href="#contact">Work with us</a>
        </div>
      </section>

      <section id="services">
        <h2>Services</h2>
        <div class="grid">
          <div class="card">
            <h3>Positioning & Narrative</h3>
            <p class="muted">Messaging frameworks, value propositions, audience alignment.</p>
          </div>
          <div class="card">
            <h3>Editorial & Content</h3>
            <p class="muted">Long-form guides, web copy, and distribution-ready posts.</p>
          </div>
          <div class="card">
            <h3>Go-to-Market Support</h3>
            <p class="muted">Lightweight GTM plans, launch communications, landing pages.</p>
          </div>
          <div class="card">
            <h3>Advisory</h3>
            <p class="muted">Remote consulting for healthtech and data-driven products.</p>
          </div>
        </div>
      </section>

      <section id="about">
        <h2>About</h2>
        <div class="grid">
          <div class="card">
            <p class="muted">
              Quantum Flow L.L.C-FZ is a Dubai Free Zone consultancy (Meydan) providing
              marketing, PR, and online marketing services to international clients.
            </p>
            <ul class="muted">
              <li>Registered activity: Marketing, PR & Online Marketing Services</li>
              <li>Formation Date: 25/03/2024 · Formation No. 2417494</li>
              <li>Services are advisory/content-based; no client funds are held.</li>
            </ul>
          </div>
          <div class="card">
            <p class="muted">
              Work is conducted remotely and invoiced per engagement. We are not a financial services provider.
            </p>
          </div>
        </div>
      </section>

      <section id="contact">
        <h2>Contact</h2>
        <p class="muted">Use the form or email us. We usually reply within one business day.</p>

        <!-- Netlify form (no backend required) -->
        <form
          name="contact"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
          action="/thanks.html"
          class="card"
          style="max-width:720px"
        >
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden" style="display:none;">
            <label>Don’t fill this out if you’re human: <input name="bot-field" /></label>
          </p>

          <div style="display:grid; gap:.75rem;">
            <label>
              Name
              <input name="name" required style="width:100%; padding:.6rem; border-radius:10px; border:1px solid var(--border); background:#0e1218; color:var(--fg);" />
            </label>
            <label>
              Email
              <input type="email" name="email" required style="width:100%; padding:.6rem; border-radius:10px; border:1px solid var(--border); background:#0e1218; color:var(--fg);" />
            </label>
            <label>
              Message
              <textarea name="message" rows="5" required style="width:100%; padding:.6rem; border-radius:10px; border:1px solid var(--border); background:#0e1218; color:var(--fg);"></textarea>
            </label>
            <button class="btn" type="submit">Send</button>
          </div>
        </form>

        <p style="margin-top:1rem;">
          Or email:
          <a class="btn" href="mailto:quantf@proton.me">quantf@proton.me</a>
          <a class="btn" href="mailto:servicedesk7@pm.me">servicedesk7@pm.me</a>
        </p>
      </section>

      <footer>
        <div>© {new Date().getFullYear()} Quantum Flow L.L.C-FZ · Dubai, U.A.E.</div>
        <div class="muted" style="margin-top:.5rem; font-size:.9rem;">
          We collect only the information you submit via this form to respond to your inquiry. No tracking cookies.
        </div>
      </footer>
    </div>
  </body>
</html>
