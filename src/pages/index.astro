---
const title = 'Quantum Flow L.L.C-FZ — Digital Strategy & Communications';
const description = 'Marketing, PR & digital strategy consultancy. Remote-first. Serving EU, MENA & APAC.';
const url = 'https://quantum-flow.netlify.app';
const emails = ['quantf@proton.me', 'servicedesk7@pm.me'];
const schema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Quantum Flow L.L.C-FZ",
  "url": url,
  "email": emails,
  "description": description,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Meydan Grandstand, 6th floor, Meydan Road, Nad Al Sheba",
    "addressLocality": "Dubai",
    "addressCountry": "AE"
  },
  "foundingDate": "2024-03-25",
  "identifier": [{ "@type": "PropertyValue", "name": "Formation Number", "value": "2417494" }],
  "areaServed": ["EU","MENA","APAC"],
  "sameAs": []
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta name="theme-color" content="#070b12" />
    <link rel="icon" href="/favicon.svg" />
    <link rel="stylesheet" href="/global.css" />
    <!-- NEW: three.js background styles -->
    <link rel="stylesheet" href="/legacy-effect.css" />
    <script type="application/ld+json">{JSON.stringify(schema)}</script>
  </head>
  <body>
    <!-- NEW: three.js background layer -->
    <div id="legacy-bg" aria-hidden="true">
      <canvas id="qf-canvas"></canvas>
    </div>

    <!-- (removed old CSS swirl layers so the three.js effect is visible)
    <div class="bgfx" aria-hidden="true"></div>
    <div class="gridfx" aria-hidden="true"></div>
    -->

    <div class="wrap">
      <header>
        <div class="brand">
          <img src="/logo.svg" alt="" />
          <strong>Quantum Flow</strong>
        </div>
        <nav>
          <a class="btn" href="#about">About</a>
          <a class="btn" href="#services">Services</a>
          <a class="btn" href="#company">Company</a>
          <a class="btn" href="#contact">Contact</a>
        </nav>
      </header>

      <section class="hero" id="top">
        <p class="kicker">Dubai Free Zone Company · Formation No. 2417494</p>
        <h1>Digital Strategy & Communications</h1>
        <p class="lede">
          Advisory and content services for technology and health organizations. We focus on
          clear positioning, compliant communications, and reliable delivery.
        </p>
        <div class="badges">
          <span class="badge">Remote-first</span>
          <span class="badge">EU · MENA · APAC</span>
          <span class="badge">Advisory & Content—No Client Funds Held</span>
        </div>
        <p style="margin-top:1rem"><a class="btn" href="#contact">Work with us</a></p>
      </section>

      <section id="services">
        <h2>Services</h2>
        <div class="grid">
          <div class="card"><h3>Positioning & Narrative</h3><p class="muted">Messaging frameworks, value propositions, and audience alignment.</p></div>
          <div class="card"><h3>Editorial & Content</h3><p class="muted">Long-form guides, web copy, and distribution-ready posts.</p></div>
          <div class="card"><h3>Go-to-Market Support</h3><p class="muted">Lightweight GTM plans, launch communications, landing pages.</p></div>
          <div class="card"><h3>Advisory</h3><p class="muted">Remote consulting for healthtech and data-driven products.</p></div>
        </div>
      </section>

      <section id="about" class="two">
        <div class="card">
          <h2>About</h2>
          <p class="muted">
            Quantum Flow L.L.C-FZ is a Dubai Free Zone consultancy (Meydan) providing
            marketing, PR, and online marketing services to international clients.
          </p>
          <ul class="list muted">
            <li>Registered activity: Marketing, PR & Online Marketing Services</li>
            <li>Formation Date: 25/03/2024 · Formation No. 2417494</li>
            <li>Services are advisory/content-based; we do not hold client funds.</li>
            <li>Work is conducted remotely and invoiced per engagement.</li>
          </ul>
        </div>
        <div class="card" id="company">
          <h2>Company</h2>
          <ul class="list muted">
            <li><strong>Jurisdiction:</strong> Dubai, U.A.E (Meydan Free Zone)</li>
            <li><strong>Address:</strong> Meydan Grandstand, 6th floor, Meydan Road, Nad Al Sheba</li>
            <li><strong>Area Served:</strong> EU · MENA · APAC (remote)</li>
            <li><strong>Email:</strong> <a href="mailto:quantf@proton.me">quantf@proton.me</a> · <a href="mailto:servicedesk7@pm.me">servicedesk7@pm.me</a></li>
          </ul>
        </div>
      </section>

      <section id="contact">
        <h2>Contact</h2>
        <p class="muted">Use the form or email us. We usually reply within one business day.</p>
        <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" action="/thanks.html" class="card" style="max-width:760px">
          <input type="hidden" name="form-name" value="contact" />
          <p class="sr"><label>Don’t fill this out if you’re human: <input name="bot-field" /></label></p>
          <div style="display:grid; gap:.9rem;">
            <label>Name <input name="name" required /></label>
            <label>Email <input type="email" name="email" required /></label>
            <label>Message <textarea name="message" rows="5" required></textarea></label>
            <button class="btn" type="submit">Send</button>
          </div>
        </form>
      </section>

      <footer>
        <div>© {new Date().getFullYear()} Quantum Flow L.L.C-FZ · Dubai, U.A.E.</div>
        <div class="muted" style="margin-top:.5rem; font-size:.9rem;">
          We collect only the information you submit via this form to respond to your inquiry. No tracking cookies.
        </div>
      </footer>
    </div>

    <!-- NEW: three.js (CDN) and background init -->
    <script src="https://cdn.jsdelivr.net/npm/three@0.152.2/build/three.min.js" defer></script>
    <script src="/legacy-three.js" defer></script>
  </body>
</html>
